<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >
    
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <TextView
        android:id="@+id/ac_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:text="AC Mode"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/ac_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto    " />

        <Button
            android:id="@+id/ac_manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual" />

    </LinearLayout>

    <TextView
        android:id="@+id/set_ac_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Set AC Control"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ac_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable Control" />

        <Button
            android:id="@+id/ac_disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disable Control" />

    </LinearLayout>

    <TextView
        android:id="@+id/ac_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="AC Control"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/ac_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC ON  " />

        <Button
            android:id="@+id/ac_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC OFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/ac_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Set AC Temperature"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/ac_temp_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:hint="e.g. 20 (Valid temp 20-25 degree only)" />

           

        <Button
            android:id="@+id/set_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Set" />

    </LinearLayout>
    
    <TextView
        android:id="@+id/ac_num_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Number of AC to be controlled"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/ac_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Single" />

        <Button
            android:id="@+id/ac_dual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dual    " />
            
            
        </LinearLayout>
        
    </LinearLayout>
    </ScrollView>

</LinearLayout>
