<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mayur.smsalert2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name="com.mayur.smsalert2.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mayur.smsalert2.AddContact"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mayur.smsalert2.editContact"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mayur.smsalert2.ViewContact"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mayur.smsalert2.command_AC"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mayur.smsalert2.command_Signage"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>